<%= form_for [@project, @task] do |f| %>
  <div class="container">
    <hr>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Submit Task", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
